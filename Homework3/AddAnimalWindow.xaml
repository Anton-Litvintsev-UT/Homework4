<Window x:Class="Homework3.AddAnimalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Animal" Height="250" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Animal Type:" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbAnimalType" Grid.Row="0" Grid.Column="1" Margin="5">
            <ComboBoxItem Content="Jellyfish"/>
            <ComboBoxItem Content="Penguin"/>
            <ComboBoxItem Content="Whale"/>
        </ComboBox>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Name:" VerticalAlignment="Center"/>
        <TextBox x:Name="tbNewName" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Age:" VerticalAlignment="Center"/>
        <TextBox x:Name="tbNewAge" Grid.Row="2" Grid.Column="1" Margin="5"/>
        <Button x:Name="btnAdd" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" 
                HorizontalAlignment="Center" Padding="5" Margin="5" Click="BtnAdd_Click">
            Add Animal
        </Button>
    </Grid>
</Window>
